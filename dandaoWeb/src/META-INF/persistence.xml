<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence">
  <persistence-unit name="notas" transaction-type="RESOURCE_LOCAL">
  
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
     
    <properties>
    
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost/dbDandaoLanche"/>
      <property name="javax.persistence.jdbc.user" value="dba_gferreira"/>
      <property name="javax.persistence.jdbc.password" value="123456"/>
      
      
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="true" />
      <property name="hibernate.format_sql" value="true" />
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
    
    </properties>
  </persistence-unit>  
</persistence>